{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "vscode",
  "build": {
    "dockerfile": "../docker/Dockerfile",
    "args": {
      "USERNAME": "vscode"
    }
  },
  "workspaceFolder": "/home/vscode/ros2_ws",
  "workspaceMount": "source=${localWorkspaceFolder}/ros2_ws,target=/home/vscode/ros2_ws,type=bind",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "donjayamanne.python-extension-pack",
        "eamodio.gitlens",
        "ms-iot.vscode-ros",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": "${env:DISPLAY}",
    "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
    "ROS_DOMAIN_ID": "42"
  },
  "runArgs": [
    "--net=host",
    "--pid=host",
    "--ipc=host",
    "-v",
    "/tmp/.X11-unix:/tmp/.X11-unix:rw"
  ],
  "mounts": [
    "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
  ],
  "postCreateCommand": "bash -c 'mkdir -p ~/ros2_ws/src && source /opt/ros/humble/setup.bash && rosdep update && colcon build'"
}