{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "Aetos",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "args": {
            "USERNAME": "Aetos"
        }
    },
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros",
                "ms-azuretools.vscode-docker",
                "ms-vscode.cpptools-extension-pack",
                "platformio.platformio-ide"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "69",
        "SDL_JOYSTICK_DEVICE": "/dev/input/js0", //detects joystick to use in joystick teleop
        "SDL_AUDIODRIVER": "dummy"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "--device-cgroup-rule=c 13:* rmw", //detects devices 
        "-e",
        "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        "source=/var/run/dbus/system_bus_socket,target=/var/run/dbus/system_bus_socket,type=bind"
    ],
    "postCreateCommand": "bash -c 'source /opt/ros/humble/setup.bash && rosdep update && sudo apt-get install -y bluez'"
}
